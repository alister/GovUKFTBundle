    -->

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js" type="text/javascript"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/select2/3.4.5/select2.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="http://omarshammas.github.io/js/jquery.formance.min.js"></script>

    {% javascripts '@HmpoLso1Bundle/Resources/public/js/enhancement.js' %}

        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}


</body>
</html>
