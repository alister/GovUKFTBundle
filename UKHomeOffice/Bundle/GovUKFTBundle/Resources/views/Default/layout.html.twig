{% extends "GovUKFTBundle:Default:base.html.twig" %}


{% block title %}{{ ft_config['title']|trans|raw }}{% endblock %}


{% block bc %}
{% for crumb in ft_config['breadcrumb'] %}
  <li><a href="{{ crumb[1] }}">{{ crumb[0] }}</a></li>
{% endfor %}
{% endblock %}



{% block sb %}
{% for section_name, section in ft_config['sidebar'] %}

	<div class="inner group related-subsection">
          <h2 id="parent-subsection">{{ section_name }}</h2>
          <nav role="navigation" aria-labelledby="parent-subsection">
          <ul>
            {% for link in section %}
		  	{% if link[2] is defined %}
		    <li class="related-topic"><a title="More in {{ link[2] }}" href="{{ link[1] }}">More</a>
		    <span class="visuallyhidden">in {{ link[2] }}</span>
		    </li>
		  	{% else %}
		    <li><a href="{{ link[1] }}">{{ link[0] }}</a></li>
		    {% endif %}
		    {% endfor %}           
          </ul>
          </nav>
    </div>

{% endfor %}
{% endblock %}


