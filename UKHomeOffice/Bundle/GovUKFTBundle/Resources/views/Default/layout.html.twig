{% extends "GovUKFTBundle:Default:base.html.twig" %}


{% block title %}
{% if ft_config['title'] is defined %}
{{ ft_config['title']|trans|raw }}
{% endif %}
{% endblock %}


{% block bc %}
{% if ft_config['breadcrumb'] is defined %}
{% for crumb in ft_config['breadcrumb'] %}
  <li><a href="{{ crumb[1] }}">{{ crumb[0] }}</a></li>
{% endfor %}
{% endif %}
{% endblock %}



{% block sb %}
{% if ft_config['sidebar'] is defined %}

<div class="related-positioning">
	<div class="related-container">
		<div class="related" id="related">

		{% for section_name, section in ft_config['sidebar'] %}

		<div class="inner group related-subsection">
        	<h2 id="parent-subsection">{{ section_name }}</h2>
          	<nav role="navigation" aria-labelledby="parent-subsection">
          		<ul>
		            {% for link in section %}
				  	{% if link[2] is defined %}
				    <li class="related-topic"><a title="More in {{ link[2] }}" href="{{ link[1] }}">More</a>
				    <span class="visuallyhidden">in {{ link[2] }}</span>
				    </li>
				  	{% else %}
				    <li><a href="{{ link[1] }}">{{ link[0] }}</a></li>
				    {% endif %}
				    {% endfor %}           
          		</ul>
          	</nav>
    	</div>
		{% endfor %}

  		<div class="inner group">
        	<a class="return-to-top" href="#content">Return to top â†‘</a>
      	</div>

      	<div id="legacy-sources">
        	<p>This page replaces</p>
        	<ul>
            	<li class="directgov">Directgov</li>
          		<li class="businesslink">Business Link</li>
        	</ul>
      	</div>
    </div>
  </div>
</div>

{% endif %}
{% endblock %}


